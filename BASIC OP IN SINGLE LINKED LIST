#include <stdio.h>
#include <stdlib.h>

struct Node {
    int data;
    struct Node* next;
};

struct Node* head1 = NULL;
struct Node* head2 = NULL;

struct Node* createNode(int value) {
    struct Node* newNode = (struct Node*)malloc(sizeof(struct Node));
    newNode->data = value;
    newNode->next = NULL;
    return newNode;
}

void insertAtEnd(struct Node** head, int value) {
    struct Node* newNode = createNode(value);
    if (*head == NULL) {
        *head = newNode;
        return;
    }
    struct Node* temp = *head;
    while (temp->next != NULL)
        temp = temp->next;
    temp->next = newNode;
}

void display(struct Node* head) {
    if (head == NULL) {
        printf("List is empty\n");
        return;
    }
    struct Node* temp = head;
    while (temp != NULL) {
        printf("%d -> ", temp->data);
        temp = temp->next;
    }
    printf("NULL\n");
}

void reverse(struct Node** head) {
    struct Node *prev = NULL, *current = *head, *next = NULL;
    while (current != NULL) {
        next = current->next;
        current->next = prev;
        prev = current;
        current = next;
    }
    *head = prev;
}
void sortList(struct Node** head) {
    struct Node *i, *j;
    int temp;
    for (i = *head; i != NULL; i = i->next)
        for (j = i->next; j != NULL; j = j->next)
            if (i->data > j->data) {
                temp = i->data;
                i->data = j->data;
                j->data = temp;
            }
}
void concatenate(struct Node** head1, struct Node** head2) {
    if (*head1 == NULL) {
        *head1 = *head2;
        return;
    }
    struct Node* temp = *head1;
    while (temp->next != NULL)
        temp = temp->next;
    temp->next = *head2;
}
int main() {
    int n, m, value, choice;
    printf("Enter Number of nodes in List 1: ");
    scanf("%d", &n);
    printf("Enter values:\n");
    for (int i = 0; i < n; i++) {
        scanf("%d", &value);
        insertAtEnd(&head1, value);
    }
    printf("Enter Number of nodes in List 2: ");
    scanf("%d", &m);
    printf("Enter values:\n");
    for (int i = 0; i < m; i++) {
        scanf("%d", &value);
        insertAtEnd(&head2, value);
    }
    while (1) {
        printf("\n1. Display List 1\n2. Display List 2\n3. Reverse List 1\n4. Sort List 1\n5. Concatenate List 2 to List 1\n6. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                display(head1);
                break;

            case 2:
                display(head2);
                break;

            case 3:
                reverse(&head1);
                display(head1);
                break;

            case 4:
                sortList(&head1);
                display(head1);
                break;

            case 5:
                concatenate(&head1, &head2);
                head2 = NULL;
                display(head1);
                break;

            case 6:
                exit(0);
        }
    }
    return 0;
}
